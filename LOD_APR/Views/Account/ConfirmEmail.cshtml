@{
    ViewBag.Title = "Confirmar correo electrónico";
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}

<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <div class="m">
                    <img src="~/Content/img/LOD_APR.png" alt="logo" class="img-responsive m-t-md" />
                </div>

            </div>
            <div class="hpanel">
                <div class="panel-body  text-center">
                    <div class="text-info m-b-md">
                        <h3>ACTIVACIÓN DE CUENTA</h3>
                    </div>
                    <i class="pe-7s-mail big-icon text-success"></i>
                    <br />
                    <p>
                        Gracias por confirmar su correo electrónico. 
                    </p>
                    <a href="@ViewBag.createPass"  class="btn btn-success btn-block"  title="Volver"> Crear Contraseña</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <small>Powered by MDTech Ltda.</small>
        </div>
    </div>
</div>
