@model IEnumerable<LOD_APR.Areas.Admin.Models.FORM_Formularios>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-condensed table-hover" id="tablaFormularios" name="tablaFormularios">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Lo puede enviar</th>
                    <th>Fecha Creación</th>
                    <th>Activo</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td>@Html.DisplayFor(modelItem => item.VisibilidadString)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Activa)</td>
                    <td>
                        <div class="btn-group text-right">
                            <a id="CreatePersonal" href="@Url.Action("ExecForm", "Ejecucion", new { area = "FORMS", id= item.IdForm }, null)" role="button" class="btn btn-xs btn-warning"><i class="fa fa-pencil"></i> Ejecutar</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>