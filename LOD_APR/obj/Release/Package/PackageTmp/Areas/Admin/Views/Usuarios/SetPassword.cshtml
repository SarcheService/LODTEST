@model LOD_APR.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Crear contraseña";
}

<div class="modal fade hmodal-warning" id="modalPassword" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <h4 class="modal-title">Resetear Password</h4>
                <h4>@ViewBag.Usuario</h4>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("SetPassword", "Manage", new AjaxOptions()
                {
                    HttpMethod = "POST",
                    OnSuccess = "sms_users.saveResult(data,status,xhr);",
                    OnBegin = "sms_users.submit();"
                }, new { name = "formPassword", id = "formPassword" }))
                {
                    <div class="form-horizontal">
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.NewPassword)
                        @Html.HiddenFor(model => model.ConfirmPassword)
                        @*<div class="form-group">

                            <div class="col-md-12">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>*@
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                                    <div class="btn-group" role="group">
                                        <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <button id="btnSubmit" type="submit" class="btn btn-warning ladda-button" data-style="expand-right"><i class="fa fa-lo"></i> Resetear</button>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        </div>
                        }

                    </div>
        </div>
    </div>
</div>