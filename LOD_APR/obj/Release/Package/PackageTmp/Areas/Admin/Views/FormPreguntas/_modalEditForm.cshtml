@model LOD_APR.Areas.Admin.Models.FORM_FormPreguntas

<div class="modal inmodal fade @ViewBag.ClsModal" id="modalparametrosEvaluacion" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <center><h4 class="modal-title"><b>@ViewBag.Titulo</b></h4></center>
            </div>
            <div class="modal-body">
                @{string action = ViewBag.Action;}

                @using (Ajax.BeginForm(action, "FormPreguntas", new { area = "Admin" }, new AjaxOptions()
                {
                    HttpMethod = "POST",
                    OnSuccess = "form_parametrosFormulario.saveResult(data,status,xhr);"
                }, new { name = "formparametrosEvaluacion", id = "formparametrosEvaluacion" }))
                {
                    @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IdItem)
                    @Html.HiddenFor(model => model.IdPregunta)
                    @Html.HiddenFor(model => model.Obligatoria)

                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-9">
                            @Html.LabelFor(model => model.TipoParam, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("TipoParam", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TipoParam, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.Largo, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.Largo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Largo, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3">
                            <div class="switch">
                                <label class="control-label">Obligatoria</label>
                                <div class="onoffswitch">
                                    @if (Model.Obligatoria)
                                    {
                                        <input checked class="onoffswitch-checkbox" id="TextoLargo_1" name="TextoLargo_1" type="checkbox">
                                    }
                                    else
                                    {
                                        <input class="onoffswitch-checkbox" id="TextoLargo_1" name="TextoLargo_1" type="checkbox">
                                    }
                                    <label class="onoffswitch-label" for="TextoLargo_1">
                                        <span class="onoffswitch-inner"></span>
                                        <span class="onoffswitch-switch"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="row m-t-md">
                        <div class="col-xs-12">
                            <div class="btn-group pull-right">
                                <button type="submit" class="btn btn-@ViewBag.Color"><i class="fa fa-upload"></i> Guardar</button>
                                <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                            </div>
                        </div>
                    </div>

                </div>
                }
                </div>
            </div>
        </div>
    </div>

