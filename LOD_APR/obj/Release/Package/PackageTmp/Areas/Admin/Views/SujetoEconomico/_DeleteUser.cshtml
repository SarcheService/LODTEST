@model LOD_APR.Models.UserViewModel

@{
    ViewBag.Title = "Eliminar Usuario";
}

<div class="modal fade hmodal-danger" id="modalSujeto" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <h4 class="modal-title">Eliminación de Usuario: @Model.Email</h4>
                <small class="font-bold">Los registros asociados a otros módulos no se pueden eliminar</small>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("DeleteUser", "SujetoEconomico", new AjaxOptions()
                {
                    HttpMethod = "POST",
                    OnSuccess = " mae_sujetos.saveResultUser(data,status,xhr);",
                    //OnBegin = " mae_sujetos.submit();"
                }, new { name = "formSujeto", id = "formSujeto" }))
                {
                    <div class="form-horizontal">
                        <h4>Realmente desea eliminar este usuario: @Model.Nombres @Model.Apellidos?</h4>
                        <hr />
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.IdSucursal)
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="btn-group pull-right">
                                    <button id="btnSubmit" type="submit" class="btn btn-danger ladda-button" data-style="expand-right"><i class="fa fa-trash"></i> Si, eliminar</button>
                                    <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

