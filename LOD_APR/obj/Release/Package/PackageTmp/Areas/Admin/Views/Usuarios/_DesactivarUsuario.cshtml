@model LOD_APR.Models.ApplicationUser

@{
    ViewBag.Title = "Desactivar Usuario";
}

<div class="modal fade hmodal-warning" id="modalUser" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <h4 class="modal-title">Desactivar Usuario: @Model.Run</h4>
                <small class="font-bold"></small>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("DesactivarUsuario", "Usuarios", new AjaxOptions()
                {
                    HttpMethod = "POST",
                    OnSuccess = "mae_createUser.saveResult(data,status,xhr);",
                }, new { name = "formUser", id = "formUser" }))
                {
                    <div class="form-horizontal">
                        <h4>Existe un Usuario con el Rut ingresado ¿Desea desactivar esa cuenta de usuario?</h4>
                        <h5>El Usuario ya no podrá acceder desde la cuenta desactivada</h5>
                        <hr />
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="btn-group pull-right">
                                    <button id="btnSubmit" type="submit" class="btn btn-warning ladda-button" data-style="expand-right"><i class="fa fa-ban"></i> Si, desactivar</button>
                                    <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                                </div>
                            </div>
                        </div>
                    </div>
}
            </div>
        </div>
    </div>
</div>
