@model LOD_APR.Areas.GLOD.ModelsViews.IndexCodView

@{
   
    ViewBag.Title = "Repositorio de Documentos";
    Layout = "~/Areas/GLOD/Views/Shared/_Layout.cshtml";
}

<div class="normalheader transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <a class="small-header-action" href="">
                <div class="clip-header">
                    <i class="fa fa-arrow-up"></i>
                </div>
            </a>

            <div id="hbreadcrumb" class="pull-right hidden-xs">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="#">Libros de Obra</a></li>
                    <li class="active">
                        <span>Repositorio de Documentos: @ViewBag.CodigoContrato - @ViewBag.NombreContrato</span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                <a role="button" href="@Url.Action("Admin", "Home", new { Area = "GLOD", id = ViewBag.IdContrato, tipo = "c_"})" class="btn btn-warning"><i class="fa fa-reply"></i></a>
                Repositorio de Documentos: @ViewBag.CodigoContrato - @ViewBag.NombreContrato
            </h2>
            <small>Listado de los documentos asociados a los distintos contratos.</small>
        </div>
    </div>
</div>

<div class="content animate-panel">
    <div class="row">
        <div class="col-lg-12 col-md-12">
   
                                <div class="panel-body panel-load" style="padding-top:0">
                                    <div class="sk-spinner sk-spinner-wandering-cubes">
                                        <div class="sk-cube1"></div>
                                        <div class="sk-cube2"></div>
                                    </div>
                                    <div class="row" id="lstDocs_Repositorio">
                                        @if (Html.ValidaPermisos("0020050000"))
                                        {
                                            @Html.Action("GetDocumentos", "RepContrato", new { Padre = ViewBag.Padre, Tipo = ViewBag.Tipo, IdContrato = ViewBag.IdContrato })
                                        }
                                    </div>
                                </div>
           
        </div>
    </div>
</div>

<div id="modalCanvas"></div>
<div id="modalCanvas2"></div>






@section Styles {
    @Styles.Render("~/bundles/datatables/css")
    @Styles.Render("~/bundles/select2/css")
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <style>

        ul.ui-autocomplete {
            z-index: 1100;
        }

        .ui-front {
            z-index: 1500 !important;
        }
    </style>
}

@section Scripts {

    @Scripts.Render("~/bundles/datatables/js")
    @Scripts.Render("~/bundles/select2/js")
    @Scripts.Render("~/bundles/datatablesBootstrap/js")
    @Scripts.Render("~/bundles/CommonHelpers")
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/app/LOD_RepContrato.js"></script>

    <script type="text/javascript">
        $.fn.modal.Constructor.prototype.enforceFocus = function () { };
        var repcontrato;
        $(document).ready(function () {
            repcontrato = new LOD_RepContrato();
        });

    </script>



}




