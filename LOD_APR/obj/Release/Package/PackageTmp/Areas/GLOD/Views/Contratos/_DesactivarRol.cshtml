@model LOD_APR.Areas.GLOD.Models.LOD_UsuariosLod
<div class="modal inmodal fade hmodal-danger" id="modalContratos" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <center><h4 class="modal-title"><b>Activar Rol</b></h4></center>
            </div>
            @using (Ajax.BeginForm("DesactivarRol", "Contratos", new AjaxOptions()
            {
                HttpMethod = "POST",
                OnSuccess = "glod_contratos.saveResultAsinarARol(data,status,xhr);"
            }, new { name = "#formAnticipo", id = "#formAnticipo" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.IdUsLod)
                        @Html.HiddenFor(model => model.UserId)
                        @Html.HiddenFor(model => model.IdRCContrato)
                
                            <h4>¿Realmente desea Desactivar el Rol: <b>@Model.LOD_RolesCttosContrato.NombreRol</b> para el Usuario <b>@Model.ApplicationUser.NombreCompleto?</b></h4><hr />
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="btn-group pull-right">
                                        @if(Html.ValidaPermisos("0020000002"))
                                        {
                                        <button id="btnSubmit" type="button" onclick="glod_contratos.LoadLadda();" class="btn btn-danger ladda-button" data-style="expand-right"><i class="fa fa-ban"></i> Si, Desactivar</button>
                                        }
                                        <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                                    </div>
                                </div>
                            </div>
                        
                    </div>
                </div>
            }
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

