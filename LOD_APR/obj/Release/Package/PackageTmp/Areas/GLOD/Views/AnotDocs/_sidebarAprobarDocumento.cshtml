    @Html.HiddenFor(model => model.IdDocAnotacion)
    @Html.HiddenFor(model => model.IdAnotacion)
    @Html.HiddenFor(model => model.IdTipoDoc)
    @Html.HiddenFor(model => model.IdDoc)
