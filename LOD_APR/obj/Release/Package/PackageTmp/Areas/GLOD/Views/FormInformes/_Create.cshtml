@model LOD_APR.Areas.GLOD.Models.FORM_Informes

<div class="modal fade hmodal-success" id="modalFormReporte" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <h4 class="modal-title">Crear Nuevo Reporte</h4>
            </div>
            <div class="modal-body">
              @using (Ajax.BeginForm("Create", null, new AjaxOptions()
              {
                  HttpMethod = "POST",
                  OnSuccess = "form_formulario.saveResult(data,status,xhr);"
              }, new { name = "formFormEval", id = "formFormEval" }))
              {
                <div class="form-horizontal">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Tipo)
                    @Html.HiddenFor(model => model.IdContrato)
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.MesInformado, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.MesInformado, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MesInformado, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Mes, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("Mes", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Mes, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Anio, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Anio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Anio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="btn-group pull-right">
                                <button type="submit" class="btn btn-success"><i class="fa fa-upload"></i> Crear Reporte</button>
                                <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                            </div>
                        </div>
                    </div>
                </div>
                }
                </div>
        </div>
    </div>
</div>