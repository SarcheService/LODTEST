@model Galena.Areas.ASP.Models.ASP_epCaratulaContrato
<div class="modal inmodal fade @ViewBag.ClsModal" id="modalInicioProcesoEP" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <center><h4 class="modal-title"><b>@ViewBag.Titulo</b></h4></center>
            </div>
            @{string action = ViewBag.Action;}
            @using (Ajax.BeginForm(action, "Contratos", new AjaxOptions()
            {
                HttpMethod = "POST",
                OnSuccess = "asp_contratos.saveResultAnticipo(data,status,xhr);"
            }, new { name = "formInicioProcesoEP", id = "formInicioProcesoEP" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.IdContrato)
                        @Html.HiddenFor(model => model.RefEP)
                        @Html.HiddenFor(model => model.FechaEP)
                        @Html.HiddenFor(model => model.PagoAnticipo)
                        @Html.HiddenFor(model => model.EstadoEP)

                        <input class="hidden" id="IdCaratula" name="IdCaratula" value="@Model.IdCaratulaEP" />

                        <h4>¿Realmente desea iniciar el proceso de Estados de Pago para el Contrato: @ViewBag.NombreContrato?</h4>
                        <hr />
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="btn-group pull-right">
                                    <button id="btnSubmit" onclick="asp_contratos.LoadLadda();" class="btn btn-success ladda-button" data-style="expand-right"><i class="fa fa-play"></i> Si, iniciar</button>
                                    <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

