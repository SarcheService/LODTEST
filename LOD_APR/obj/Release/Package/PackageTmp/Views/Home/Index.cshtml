@section Styles {
    @Styles.Render("~/bundles/bootstrapTour/css")
}

@section Scripts {
    @Scripts.Render("~/bundles/bootstrapTour/js")

    <script type="text/javascript">
        var tour;
        $(function () {

            tour = new Tour({
                backdrop: true,
                onShown: function (tour) {

                    // ISSUE    - https://github.com/sorich87/bootstrap-tour/issues/189
                    // FIX      - https://github.com/sorich87/bootstrap-tour/issues/189#issuecomment-49007822

                    // You have to write your used animated effect class
                    // Standard animated class
                    $('.animated').removeClass('fadeIn');
                    // Animate class from animate-panel plugin
                    $('.animated-panel').removeClass('zoomIn');

                },
                steps: [
                    {
                        element: ".tour-2",
                        title: "Barra de Accesos Rápidos",
                        content: "Esta sección contiene botones de acceso rápido a las distintas aplicaciones de la suite experta. Tambien se mostrarán alertas en todo momento!",
                        placement: "bottom"
                    },
                    {
                        element: ".tour-3",
                        title: "App Actual",
                        content: "Aqui se indicará en que aplicación de la suite experta se encuentra trabajando.",
                        placement: "bottom"

                    },
                    {
                        element: "#navigation",
                        title: "Menú principal",
                        content: "Este menú dinámico cambiará dependiendo de la aplicación en la cual se encuentre trabajando.",
                        placement: "right"

                    },
                    {
                        element: ".tour-1",
                        title: "Cuerpo o página de trabajo",
                        content: "Esta sección corresponde al área de trabajo donde se mostrarán las distintas páginas ingresadas atraves del menú principal.",
                        placement: "top"

                    }
                ],
                container: "body",
            });

            // Initialize the tour
            tour.init();

            // Restart the tour
            $('.run-tour').click(function () {
                console.debug("Iniciando el tour");
                tour.restart();
            });



        });
        $(document).ready(function () {

        });

    </script>
}