@{
    ViewBag.Title = "Confirmación de restablecimiento de contraseña";
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}

<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="hpanel">
                <div class="panel-body  text-center">
                    <div class="text-center m-b-md">
                        <div class="m">
                            <img src="~/Content/img/LOD_APR.png" class="img-responsive m-t-md" style="margin: 0px auto;" />
                        </div>

                    </div>
                    <div class="text-info m-b-md">
                        <h3>CREACION / RESETEO DE CONTRASEÑA</h3>
                    </div>
                    <i class="fa fa-check big-icon text-success"></i>
                    <br />
                    <p>
                        Se creó o restableció la contraseña. @Html.ActionLink("Haga clic aquí para iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <small>Powered by MDTech Ltda.</small>
        </div>
    </div>
</div>