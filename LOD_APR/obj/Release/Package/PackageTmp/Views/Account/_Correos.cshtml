<!DOCTYPE HTML PUBLIC '-//W3C//DTD XHTML 1.0 Strict//ES' 'http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd'>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:og="http://opengraphprotocol.org/schema/" xml:lang="es" lang="es" dir="ltr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <title>Sistema de Libro de Obras Aguas Chañar S.A.</title>
    <style type="text/css">
        .Cuerpo {
            width: 600px;
            padding: 10px;
            background-color: #FFF;
            border-top-left-radius: 6px;
            border-top-right-radius: 6px;
            border-bottom-left-radius: 6px;
            border-bottom-right-radius: 6px;
            border: 1px solid #CCC;
            margin-top: 20px;
            margin-bottom: 25px;
            margin-right: 10px;
            display: block;
        }

        .Cabecera {
            display: block;
            width: 100%;
            margin-bottom: 25px;
        }

        .Titulo {
            color: #3B71AB;
            font-family: Segoe UI Light;
            font-size: 22px;
            text-align: center;
            width: 100%;
            margin: 0 0 5px 0;
            vertical-align: top;
        }

        .Subtitulo {
            font-size: 16px;
            font-family: Segoe UI Light;
            font-weight: bold;
            text-align: left;
        }

        .Parrafo {
            color: #000000;
            font-size: 16px;
            font-family: Segoe UI Light;
            text-decoration: none;
        }
    </style>

</head>
<body>
    <div class="Cuerpo">
        <div class="Cabecera">
            <div style="display:inline-block;width: 25%;height: 100%">
                <img style="margin-bottom:10px;" src="@ViewBag.Ruta" width="120" height="60" alt="Logo">
            </div>
            <br />
            <div style="display:inline-block;width: 72%;height:74px;vertical-align:top;">
                <h3 class="Titulo">@ViewBag.Titulo</h3>
                <h4 class="Subtitulo">@ViewBag.Subtitulo</h4>
            </div>
        </div>

        <p class="Parrafo">@ViewBag.Encabezado</p>

        <table>
            <thead>
                <tr>
                    @*<th class="Subtitulo">
                        Descripción:
                    </th>
                    <th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Items)
                {
                    <tr>
                        <td class="Subtitulo">@item.Item</td>
                        <td class="Parrafo">@Html.Raw(item.Descripcion)</td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="Parrafo">@Html.Raw(ViewBag.Cuerpo)</p>

        <h3></h3>

    </div>
</body>
</html>
