
@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Eliminar Perfil";
}
<div class="modal inmodal fade hmodal-danger" id="modalDelete" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <h4 class="modal-title">Eliminación de registro</h4>
                <small class="font-bold">Los registros asociados a otros módulos no se pueden eliminar</small>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("Delete", null, new AjaxOptions()
                {
                    HttpMethod = "POST",
                    OnSuccess = "seg_perfiles.saveResult(data,status,xhr);",
                }, new { name = "formDatos", id = "formDatos" }))
                {
                    <div class="form-horizontal">
                        <h4>Realmente desea eliminar este Perfil: @Model.Name ?</h4>
                        <hr />
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="btn-group pull-right">
                                    @* <button id="btnSubmit" type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Si, eliminar</button>*@
                                    <button id="btnSubmit" type="submit" class="btn btn-danger ladda-button" data-style="expand-right"><i class="fa fa-trash"></i> Si, eliminar</button>
                                    <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
