@model LOD_APR.Areas.Admin.Models.MAE_opcionesMenu

@{
    ViewBag.Title = "Eliminar Opcion";
}

<div class="modal fade hmodal-danger" id="modalOpcionesMenu" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <h4 class="modal-title">Eliminación de sistema: @Model.Opcion</h4>

            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("Delete", "opcionesMenu", new AjaxOptions()
                {
                    HttpMethod = "POST",
                    OnSuccess = "mae_opcionesMenu.saveResult(data,status,xhr);",
            
                }, new { name = "formDatos", id = "formDatos" }))
                {
                    <div class="form-horizontal">
                        <h4>Realmente desea eliminar este modulo: @Model.Opcion ?</h4>
                        <hr />
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.IdOpcion)
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="btn-group pull-right">
                                    <button id="btnSubmit" type="submit" class="btn btn-danger ladda-button" data-style="expand-right"><i class="fa fa-trash"></i> Si, eliminar</button>
                                    <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                                </div>
                            </div>
                        </div>
                    </div>
}
            </div>
        </div>
    </div>
</div>
