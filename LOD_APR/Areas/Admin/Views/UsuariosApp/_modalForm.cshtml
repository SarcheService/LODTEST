

<div class="modal inmodal fade hmodal-@ViewBag.ModalColor" id="modalAsignaUsuario" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <h4 class="modal-title">@ViewBag.TituloModal Usuario a @ViewBag.NombreApp</h4>
            </div>

            @{ string Action = ViewBag.Action;}
            @using (Ajax.BeginForm(Action, null, new AjaxOptions()
            {
                HttpMethod = "POST",
                OnSuccess = "userApp.saveResult(data,status,xhr);"
            }, new { name = "formAsignaUsuario", id = "formAsignaUsuario" }))
            {
                <div class="modal-body">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="IdRoleOld" value="@ViewBag.IdRoleOld" />
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-12">
                                <label class="control-label" for="IdUser">Usuario</label>
                                @Html.DropDownList("IdUser", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label class="control-label" for="IdRole">Rol</label>
                                @Html.DropDownList("IdRole", null, new { @class = "form-control" })
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="btn-group pull-right">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-upload"></i> Asignar</button>
                                <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>