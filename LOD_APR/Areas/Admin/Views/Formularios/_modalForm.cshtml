@model LOD_APR.Areas.Admin.Models.FORM_Formularios

<div class="modal inmodal fade hmodal-@ViewBag.ClsModal" id="modalFormEval" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <center><h4 class="modal-title"><b>@ViewBag.Titulo</b></h4></center>  
            </div>
            <div class="modal-body">
                @{string action = ViewBag.Action;}

                @using (Ajax.BeginForm(action, "formulariosEvaluacion", new { area = "EVA" }, new AjaxOptions()
                {
                    HttpMethod = "POST",
                    OnSuccess = "form_formulario.saveResult(data,status,xhr);"
                }, new { name = "formFormEval", id = "formFormEval" }))
                {
                    @Html.AntiForgeryToken()
                    
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdForm)
                        @Html.HiddenFor(model => model.FechaCreacion)
                        @Html.HiddenFor(model => model.UserId)
                        @Html.HiddenFor(model => model.Activa)
                       
                        <div class="form-group">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>                     
                        <div class="form-group">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-1"></div>              
                            <div class="col-md-4">
                                <center style="margin-top:7px">
                                    <div class="switch">
                                        <label>Activo</label>
                                        <div class="onoffswitch">

                                            @if (Model.Activa)
                                            {
                                                <input checked="checked" class="onoffswitch-checkbox" id="Activo_1" name="Activo_1" type="checkbox">
                                            }
                                            else
                                            {
                                                if (ViewBag.Activar)
                                                {
                                                    <input class="onoffswitch-checkbox" id="Activo_1" name="Activo_1" type="checkbox">
                                                }
                                                else
                                                {
                                                    <input class="onoffswitch-checkbox" id="Activo_1" name="Activo_1" type="checkbox" disabled>
                                                }

                                            }
                                            <label class="onoffswitch-label" for="Activo_1">
                                                <span class="onoffswitch-inner"></span>
                                                <span class="onoffswitch-switch"></span>
                                            </label>

                                        </div>
                                    </div>
                                </center>
                            </div>

                            <div class="col-md-1"></div>
                        </div>
                        <div class="col-md-12"><br /> </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="btn-group pull-right">
                                    <button type="submit" class="btn btn-@ViewBag.ClsModal"><i class="fa fa-upload"></i> Guardar</button>
                                    <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

