@model IEnumerable<LOD_APR.Areas.Admin.Models.MAE_sistema>

<table id="tablaDatos" class="table table-condensed table-hover dataTable no-footer">
    <thead>
        <tr>
            <th>
                Id Sistema
            </th>
            <th>
                Sistema
            </th>
            <th>
                Abreviatura
            </th>



            <th>
                 Activo
            </th>


            <th>
                Controlador
            </th>
           

            <th>
                Accion
            </th>

            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>

   
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.IdSistema)            
                </td>
                <td>
                    @Html.DisplayFor(model => item.NombreSistema)
                </td>

                <td>
                    @Html.DisplayFor(model => item.Sistema)
                </td>

                <td>
                    @Html.DisplayFor(model => item.Activo)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Controlador)
              
             
                <td>
                    @Html.DisplayFor(model => item.Accion)
                </td>



               <td>
                    
                        
           
                   <div class="btn-group" role="group">


                       @Ajax.RawActionLink(string.Format(" <i class=\"fa fa-pencil-square-o\"></i> "), "Edit", "Sistemas", new { Id = item.IdSistema },
          new AjaxOptions
          {
              HttpMethod = "GET",
              InsertionMode = InsertionMode.Replace,
              UpdateTargetId = "modalCanvas",
              OnSuccess = "mae_sistemas.initModal(data,status,xhr);"
          }
          , new { @class = "btn btn-warning btn-xs" })


                       @if (item.MAE_modulos.Count == 0)
    {
                   @Ajax.RawActionLink(string.Format("<i class=\"fa fa-trash\"></i>"), "Delete", "Sistemas", new { Id = item.IdSistema },
     new AjaxOptions
     {
         HttpMethod = "GET",
         InsertionMode = InsertionMode.Replace,
         UpdateTargetId = "modalCanvas",
         OnSuccess = "mae_sistemas.initModal(data,status,xhr);"
     }
     , new { @class = "btn btn-danger btn-xs" })


}

                       <a href="@Url.Action("Index", "Modulos", new {Id = item.IdSistema}, null)" role="button" class="btn btn-info btn-xs"><i class="pe-7s-look"></i> </a>

                   </div>
                </td>

            
                
            </tr>
        }
    </tbody>
</table>