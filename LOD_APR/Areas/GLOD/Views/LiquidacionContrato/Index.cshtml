@model IEnumerable<LOD_APR.Areas.GLOD.ModelsViews.DocumentosAnotacionView>
@using System
@using LOD_APR.Areas.GLOD.Models
@{ ViewBag.Title = "Inicio Rápido";
    Layout = "~/Areas/GLOD/Views/Shared/_Layout.cshtml"; }

<div class="normalheader transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <a class="small-header-action" href="">
                <div class="clip-header">
                    <i class="fa fa-arrow-up"></i>
                </div>
            </a>
            <div id="hbreadcrumb" class="pull-right hidden-xs">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="#">Liquidación de Contrato</a></li>
                    <li class="active">
                        <span>Liquidación Contrato</span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                <b>Liquidación Contrato</b>
            </h2>
            <small>Aquí se realiza la Liquidación de Contratos </small>
        </div>
    </div>
</div>
<hr />

<div class="content animate-panel">
    <div class="hpanel">
        <input class="hide" id="TipoVista" name="TipoVista" value="@ViewBag.TipoVista" />
        <div class="panel-heading" style="background-color:white">
            <div class="row m-b-sm">
                <div class="col-xs-6 m-l-xl">
                    <label class="control-label" for="IdContrato">Contratos</label>
                    @Html.DropDownList("IdContrato", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-xs-6"></div>
            </div>
        </div>
        <div class="panel-body   panel-load" style="background-color:white">
            <div class="sk-spinner sk-spinner-wave">
                <div class="sk-rect1"></div>
                <div class="sk-rect2"></div>
                <div class="sk-rect3"></div>
                <div class="sk-rect4"></div>
                <div class="sk-rect5"></div>
            </div>
            <div class="panel-warning">
                <div class="col-lg-12" id="getInfoContrato">

                </div><hr />
            </div>
            <div class="row">
                <div class="col-lg-12" id="getLibros">
                    <center><h5><span class="label label-default">Seleccione un Contrato</span></h5></center>

                </div>
            </div><hr />
            <div class="row">
                <div class="col-lg-12" id="getDocumentos">


                </div>

            </div>
        </div>

    </div>
</div>





<div id="modalCanvas"></div>




@section Styles {
    <style>

        /*#dropdownMenuButton{
            margin-top:10px;
            margin-bottom:0px;
        }*/

        .dropdown-content {
            width: 250px;
            display: none;
            position: absolute;
            background-color: white;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            padding: 12px 16px;
            z-index: 1;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>


    @Styles.Render("~/bundles/datatables/css")
    @Styles.Render("~/bundles/sweetAlert/css")
    @Styles.Render("~/bundles/select2/css")
    @Styles.Render("~/bundles/ladda/css")

}


@section Scripts {


    @Scripts.Render("~/bundles/datatables/js")
    @Scripts.Render("~/bundles/datatablesBootstrap/js")
    @Scripts.Render("~/bundles/CommonHelpers")
    @Scripts.Render("~/bundles/ladda/js")
    @Scripts.Render("~/bundles/sweetAlert/js")
    @Scripts.Render("~/bundles/select2/js")
    <script src="~/Scripts/app/GLOD_Liquidacion.js"></script>
