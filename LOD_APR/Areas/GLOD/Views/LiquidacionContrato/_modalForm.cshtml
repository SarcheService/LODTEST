@model LOD_APR.Areas.GLOD.Models.LOD_Anotaciones

<div class="modal inmodal fade hmodal-success" id="modalLiquidacion" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <center><h4 class="modal-title">Nueva Anotación</h4></center>
            </div>
            <div class="modal-body">
                <form id="formLiquidacion" name="formLiquidacion" action="/GLOD/LiquidacionContrato/AddAnotacion" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdLod)
                        @Html.HiddenFor(model => model.IdTipoSub)

                        <div class="form-group">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Titulo, "Título", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", Type = "text" } })
                                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Cuerpo, "Cuerpo", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Cuerpo, new { htmlAttributes = new { @class = "form-control", Type = "text" } })
                                @Html.ValidationMessageFor(model => model.Cuerpo, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.LOD_LibroObras.NombreLibroObra, "Libro", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.LOD_LibroObras.NombreLibroObra, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.LOD_LibroObras.NombreLibroObra, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.MAE_SubtipoComunicacion.Nombre, "Subtipo de comunicación", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.MAE_SubtipoComunicacion.Nombre, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.MAE_SubtipoComunicacion.Nombre, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>

                        <hr />
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="btn-group pull-right">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-upload"></i> Guardar</button>
                                    <a href="#" data-dismiss="modal" class="btn btn-default"><i class="fa fa-ban"></i> Cancelar </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



<script>

    $('#Tipo').change(function () {
        var texto = $('#Tipo :selected').val();
        if (isNaN(texto)) {
            texto = 0;
        }
        $('#IdTipo').val(texto);
    });

    //$("#first").select2('val');

