@model IEnumerable<LOD_APR.Areas.GLOD.Models.LOD_docAnotacion>

<table class="table table-condensed table-hover" id="tableDatos">
    <thead>
        <tr>
            <th>Contrato</th>
            <th>
                Tipo de Comunicación
            </th>
            <th>
                Subtipo de Comunicación
            </th>
            <th>
                Tipo Documento
            </th>
            <th>
                Nombre documento
            </th>
            <th>Descripción</th>
            <th>
                Fecha Creación
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @{

            //var lod = 0;
            //var com = 0;
            //var sub = 0;
            //var classone = 0;
            //var classtwo = 0;

        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.LOD_Anotaciones.LOD_LibroObras.CON_Contratos.CodigoContrato)</td>
                <td>@Html.DisplayFor(modelItem => item.LOD_Anotaciones.MAE_SubtipoComunicacion.MAE_TipoComunicacion.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.LOD_Anotaciones.MAE_SubtipoComunicacion.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.MAE_TipoDocumento.Tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.MAE_documentos.NombreDoc)</td>
                <td>@Html.DisplayFor(modelItem => item.MAE_documentos.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.MAE_documentos.FechaCreacion)</td>
                <td>
                    <div class="btn-group-nobreak">
                        @{ string ruta = "";
                            if (!string.IsNullOrEmpty(item.MAE_documentos.Ruta))
                            {
                                ruta = "/../../" + item.MAE_documentos.Ruta;
                            }
                        }
                        <center>
                            <a href="@Url.Action("DescargarDocumento", null, new { id = item.IdDocAnotacion })" target="_blank" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Descargar Documento"><i class="fa fa-download"></i> Descargar</a>
                        </center>

                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
