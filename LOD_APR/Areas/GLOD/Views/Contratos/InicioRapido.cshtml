@model IEnumerable<LOD_APR.Areas.GLOD.Models.LOD_LibroObras>
@using System
@using LOD_APR.Areas.GLOD.Models
@{
    ViewBag.Title = "Inicio Rápido";
    Layout = "~/Areas/GLOD/Views/Shared/_Layout.cshtml";
}

<div class="normalheader transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <a class="small-header-action" href="">
                <div class="clip-header">
                    <i class="fa fa-arrow-up"></i>
                </div>
            </a>
            <div id="hbreadcrumb" class="pull-right hidden-xs">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="#">Gestión de Libros de Obras por Contrato</a></li>
                    <li class="active">
                        <span>Inicio Rápido</span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                <b>Inicio Rápido</b>
            </h2>
            <small>Aquí se accede de forma rápida a Libros de Obra por Contrato </small>
        </div>
    </div>
</div>

<div class="content animate-panel">

    <div class="hpanel">
        <input class="hide" id="TipoVista" name="TipoVista" value="@ViewBag.TipoVista" />
        <div class="panel-body   panel-load" style="overflow:auto;padding-bottom:5px;background-color:white">
            <div class="sk-spinner sk-spinner-wave">
                <div class="sk-rect1"></div>
                <div class="sk-rect2"></div>
                <div class="sk-rect3"></div>
                <div class="sk-rect4"></div>
                <div class="sk-rect5"></div>
            </div>

            <div class="row m-b-sm">
                <div class="col-lg-3 text-left">
                    <div class="col-lg-12 m-t-xs">

                        @Html.LabelFor(model => Model, "Seleccione Contrato", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("ContratosDisponible", null, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    <div class="col-lg-12 m-t-sm" id="getInfoAnot">
                    </div>
                </div>
                <div class="col-lg-9" id="getInfoDoc">

                </div>
            </div>


            <div id="getLibros">

            </div>
        </div>
    </div>
</div>









@section Styles {

    <style>

        /*#dropdownMenuButton{
            margin-top:10px;
            margin-bottom:0px;
        }*/

        .dropdown-content {
            width: 250px;
            display: none;
            position: absolute;
            background-color: white;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            padding: 12px 16px;
            z-index: 1;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>






    @Styles.Render("~/bundles/datatables/css")
    @Styles.Render("~/bundles/sweetAlert/css")
    @Styles.Render("~/bundles/select2/css")
    @Styles.Render("~/bundles/ladda/css")

}

@section Scripts {

    @Scripts.Render("~/bundles/ladda/js")
    @Scripts.Render("~/bundles/datatables/js")
    @Scripts.Render("~/bundles/datatablesBootstrap/js")
    @Scripts.Render("~/bundles/CommonHelpers")
    @Scripts.Render("~/bundles/sweetAlert/js")
    @Scripts.Render("~/bundles/select2/js")


    <script src="~/Scripts/app/GLOD_inicioRapido.js"></script>
