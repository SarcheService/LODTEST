@model IEnumerable<Galena.Areas.ASP.Models.ASP_contratos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ASP/Views/Shared/_Layout.cshtml";
}

<div class="normalheader transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <a class="small-header-action" href="">
                <div class="clip-header">
                    <i class="fa fa-arrow-up"></i>
                </div>
            </a>

            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="#">Administración y Seguimiento de Proyectos</a></li>
                    <li class="active">
                        <span>Contratos</span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                <b>Panel de Contratos</b>
            </h2>
            <small>Listado Resumen de los contrato</small>
        </div>
    </div>
</div>

<div class="content animate-panel">
    <div class="row">
       
        <div class="col-lg-12 col-md-12">
            <div class="row">
                <div class="col-lg-12 col-xs-12">
                    <ul class="nav nav-tabs" style="border-bottom:none">
                        @foreach (var item in ViewBag.Empresas)
                        {

                            <li class="LiTab @{

                        if((item.IdEmpresa.ToString() == @ViewBag.IdEmpresa.ToString()) )
                        {
                        @Html.Raw("active")
                        }
                    }
                        "><a data-toggle="tab" onclick="asp_panelContratos.getTablePanelContratos(@item.IdEmpresa)" href="#tab">@item.NomFantasia</a></li>

                    }
                    </ul>
                </div>
            </div>
            <input class="hide" type="number" id="IdEmpresa" name="IdEmpresa" value="@ViewBag.IdEmpresa" />
            <div class="hpanel">
                <div class="panel-heading hbuilt">
                    <div class="row">
                        <div class="col-xs-12">
                            <span>Tabla Resumen de Contratos</span>
                        </div>
                    </div>
                </div>
                <div class="panel-body panel-load">
                    <div class="sk-spinner sk-spinner-wave">
                        <div class="sk-rect1"></div>
                        <div class="sk-rect2"></div>
                        <div class="sk-rect3"></div>
                        <div class="sk-rect4"></div>
                        <div class="sk-rect5"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div id="divTableDatos">
                                @Html.Partial("_getTableResumenContratos", Model)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<div id="modalCanvas"></div>

@section Styles {

    @Styles.Render("~/bundles/datatables/css")
}

@section Scripts {


    @Scripts.Render("~/bundles/datatables/js")
    @Scripts.Render("~/bundles/datatablesBootstrap/js")
    @Scripts.Render("~/bundles/CommonHelpers")
    @Scripts.Render("~/bundles/ASP_panelContratos")



    <script type="text/javascript">

        var asp_panelContratos;
            $(document).ready(function () {
                asp_panelContratos = new ASP_panelContratos();
            });


    </script>

}

