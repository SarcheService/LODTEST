                                     new AjaxOptions
                                     {
                                         HttpMethod = "GET",
                                         InsertionMode = InsertionMode.Replace,
                                         UpdateTargetId = "modalCanvas",
                                         OnSuccess = "asp_contratos.initModal(data,status,xhr);"
