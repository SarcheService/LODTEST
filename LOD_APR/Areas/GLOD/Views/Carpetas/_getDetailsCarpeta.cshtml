    </div>

    <div class="col-lg-4 col-xs-6">
        <h2 class="text-center text-primary"><i class="fa fa-book  fa-2x hidden-xs" aria-hidden="true"></i></h2>
        <h2 class="text-center text-primary"><i class="fa fa-book  visible-xs" aria-hidden="true"></i></h2>
        <center>
            @if(ViewBag.EsInspectorFiscal)
            {
