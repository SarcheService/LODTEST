@model LOD_APR.Areas.GLOD.ModelsViews.AnotacionRespuesta

<div class="form-horizontal text-left">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdAnotacionRef)

    <div class="row">
        <div class="col-md-12">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
        </div>
    </div>
    <select-responder-anotacion :id-contrato="@Model.IdContrato"></select-responder-anotacion>
    <div class="row">
        <div class="col-md-12">
            @Html.LabelFor(model => model.Cuerpo, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Cuerpo, new { htmlAttributes = new { @class = "form-control summernote" } })
            @Html.ValidationMessageFor(model => model.Cuerpo, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

