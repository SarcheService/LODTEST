@model LOD_APR.Areas.GLOD.Models.LOD_Anotaciones
@using LOD_APR.Areas.GLOD.Models;

<div class="form-horizontal">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdLod)
    <div class="row">
        <div class="col-md-12">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
        </div>
    </div>
    <select-tipo-anotacion :id-libro="@Model.IdLod"></select-tipo-anotacion>
    <div class="row">
        <div class="col-md-12">
            @Html.LabelFor(model => model.Cuerpo, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Cuerpo, new { htmlAttributes = new { @class = "form-control summernote" } })
            @Html.ValidationMessageFor(model => model.Cuerpo, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

